<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Body</th>
      <th>Time</th>
      <th>Status</th>
      <th>Lista</th>
      <th>Użytkownik</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.body %></td>
        <td><%= task.time %></td>
        <td><%= task.status %></td>
        <td><%= link_to task.list, task.list %></td>
        <% if task.user == nil %>
        <td><%= link_to 'Weź taska', add_user_task_path(task), method: :post %></td>
        <% else %>
        <td><%= task.user %></td>
        <% end %>
        <td><%= link_to 'Show', [task.list, task] %></td>
        <td><%= link_to 'Edit', edit_list_task_path(task.list, task) %></td>
        <td><%= link_to 'Destroy', [task.list, task], method: :delete, data: { confirm: 'Are you sure?' } %></td>        
      </tr>
    <% end %>
  </tbody>
</table>